{
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.organizeImports.biome": "explicit",
		"source.fixAll.biome": "explicit",
		"source.organizeImports": "never", // disable other extensions
		"source.fixAll": "never" // disable other extensions
	},
	"i18n-ally.localesPaths": [
		"apps/mobile-app/i18n",
		"packages/app-translations/locales",
		"apps/backend/src/i18n",
		"apps/mobile-app/i18n/locales",
		"packages/shared-types/src/i18n",
		"apps/backend/src/notifications/i18n"
	]
}
